<div class="container mt-5">
  <div class="text-center">
    <h1>Insert the details</h1>
  </div>
  <div>
    <%= simple_form_for(@restaurant) do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category%>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
    <p class="mt-2"><%= link_to "Back", restaurants_path %></p>
  </div>
</div>
