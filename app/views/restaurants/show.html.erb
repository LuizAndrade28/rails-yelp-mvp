<div class="container">
  <div class="d-flex flex-column vh-100 justify-content-center">
    <div class="d-flex justify-content-center mb-5">
      <h1><%= @restaurant.name %></h1>
    </div>

    <div class="d-flex flex-column">
      <p class="d-flex justify-content-center">Adress: <%= @restaurant.address %></p>
      <p class="d-flex justify-content-center">Phone: <%= @restaurant.phone_number %></p>
      <p class="d-flex justify-content-center">Category: <%= @restaurant.category.capitalize %></p>
      <% @restaurant.reviews.each_with_index do |review, index| %>
      <p class="d-flex list-group-item justify-content-center">
        <strong><%= index+1 %>: </strong> <%= review.content %>
      </p>
      <% end %>
    </div>


    <div class="d-flex justify-content-center">
      <div class="d-flex justify-content-center p-2">
        <%= link_to "New review", new_restaurant_review_path(@restaurant) %>
      </div>
      <div class="d-flex justify-content-center p-2">
        <%= link_to "Back to restaurants", restaurants_path %>
      </div>
      </div>
  </div>
</div>
