<div class="container mt-5">
  <div class="text-center">
    <h1>Review details</h1>
  </div>
  <div>
    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :rating %>
      <%= f.input :content %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
    <p class="mt-2"><%= link_to "Back", restaurant_path(@restaurant) %></p>
  </div>
</div>
